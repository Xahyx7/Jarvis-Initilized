{
  "version": 2,
  "name": "jarvis-ai-ultimate",
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "pages/api/**/*.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/pages/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "pages/api/chat.js": {
      "maxDuration": 30
    },
    "pages/api/test-generator.js": {
      "maxDuration": 30
    },
    "pages/api/health.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
